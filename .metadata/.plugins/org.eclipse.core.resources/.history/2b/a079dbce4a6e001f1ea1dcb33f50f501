package Login;

import javax.swing.*;
import java.awt.*;

public class LoginFrame extends JFrame {

    private JPanel contentPane;
    private JTextField textField;
    private JPasswordField passwordField;

    public LoginFrame() {
        super("Login");

        // Configurações básicas da janela
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setBounds(100, 100, 500, 500);
        setResizable(false); // Fixa o tamanho da janela

        // Configura o contentPane com GridBagLayout para centralização
        contentPane = new JPanel(new GridBagLayout());
        contentPane.setBackground(new Color(255, 0, 0));
        contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
        setContentPane(contentPane);

        // Icone da janela
        ImageIcon appIcon = new ImageIcon(getClass().getResource("/icons/eagle.png"));
        Image imgAPP = appIcon.getImage();
        setIconImage(imgAPP);

        // Configura o painel de login
        JPanel panel = new JPanel();
        panel.setLayout(null); // Layout nulo no painel específico
        panel.setPreferredSize(new Dimension(334, 222)); // Tamanho preferido do painel de login
        contentPane.add(panel, new GridBagConstraints()); // Adiciona o painel ao centro

        // Logo
        JLabel logoLabel = new JLabel();
        logoLabel.setBounds(119, 10, 100, 50);
        ImageIcon logoIcon = new ImageIcon(getClass().getResource("/icons/eagle.png"));
        Image img = logoIcon.getImage();
        Image scaledImage = img.getScaledInstance(100, 50, Image.SCALE_SMOOTH);
        logoIcon = new ImageIcon(scaledImage);
        logoLabel.setIcon(logoIcon);
        panel.add(logoLabel);

        // Campo de usuário
        JLabel lblNewLabel = new JLabel("User");
        lblNewLabel.setBounds(50, 71, 45, 13);
        panel.add(lblNewLabel);

        textField = new JTextField();
        textField.setBounds(50, 84, 242, 26);
        panel.add(textField);
        textField.setColumns(10);

        // Campo de senha
        JLabel lblNewLabel_1 = new JLabel("Password");
        lblNewLabel_1.setBounds(50, 113, 64, 13);
        panel.add(lblNewLabel_1);

        passwordField = new JPasswordField();
        passwordField.setBounds(50, 126, 242, 26);
        panel.add(passwordField);

        // Botão de login
        JButton btnNewButton = new JButton("Enter");
        btnNewButton.setBounds(134, 162, 85, 21);
        panel.add(btnNewButton);

        // Centraliza a janela na tela
        setLocationRelativeTo(null);
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(() -> {
            LoginFrame frame = new LoginFrame();
            frame.setVisible(true);
        });
    }
}

 